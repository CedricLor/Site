{% extends 'layouts/simple' %}

{% block content/header %}

{% endblock %}

{% block content/main %}

    {% model_form 'user_messages', success: '/', error: '/contact', class: "form" %}

      {% if customer_message.errors %}
        <p>The following errors occured:</p>
        <ul>
        {% for error in customer_message.errors %}
          <li>{{error[0] | capitalize}} -  {{error[1]}}</li>
        {% endfor %}
        </ul>
      {% endif %}

        <div class="form-group">
          <label for="inputName" class="control-label">Name:</label>
          <input name="content[name]" type="email" class="form-control" id="inputName" placeholder="Name" value="{{customer_message.name}}">
        </div>
        <div class="form-group">
          <label for="inputEmail" class="control-label">Email:</label>
          <input name="content[email]" type="email" class="form-control" id="inputEmail" placeholder="Email" value="{{customer_message.email}}">
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="control-label">Message:</label>
          <textarea name="content[message]" class="form-control" id="message" placeholder="Message" rows="3">{{customer_message.message}}</textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      <input type="submit">

    {% endmodel_form %}

{% endblock %}
